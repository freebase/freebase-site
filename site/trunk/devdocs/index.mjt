<acre:script>
  var mf = acre.require("MANIFEST").MF;
  var c = this.exports.c = {};
  var categories = mf.require("doc_list").get_list();
</acre:script>

<acre:block def="title()">
  API Reference
</acre:block>

<acre:block def="head()">
  <link rel="stylesheet" type="text/css" href="${mf.css_src('docs_style.mf.css')}" />
</acre:block>

<acre:block def="content_body()">
  <div id="docs-search">
    <h1>Search Freebase docs:</h1>
    <form action="http://www.google.com/cse">
      <input type="hidden" name="cx" value="000021600935202413705:4wd8ui9n5go" />
      <input type="hidden" name="ie" value="UTF-8" />
      <input type="text" name="q" class="docs-search-input" />
      <input type="submit" name="sa" value="Search" class="button-primary" />
    </form>
  </div>
    <div id="help-section" class="full">
      <div id="help-content" class="wide">
        <h1>Freebase API Reference Documentation</h1>

        <p>
          This is the home of "official" Freebase API documentation, written by the developers who wrote the APIs.
        </p>

        <blockquote>
          <strong>
            Please check out the <a href="http://wiki.freebase.com/wiki/Category:Development">developer resources 
            on the Freebase wiki</a> for support, examples, tutorials, etc.
          </strong>
        </blockquote>

        <acre:block for="category in categories">
          <h2>$category.name</h2>
          <ul>
            <li acre:for="doc in category.docs" acre:if="!(doc.hidden && (o.sel_category != doc.key))">
              <a acre:if="doc.sections || doc.content" href="$c.base_path/$doc.key">$doc.name</a>
              <a acre:elif="doc.link" href="$doc.link">$doc.name</a>
              <span acre:else="">$doc.name</span>
            </li>
          </ul>
        </acre:block>
      </div>
    </div>
  </div>
</acre:block>

<acre:block def="footer_script()">
  <script type="text/javascript" src="${mf.js_src('index.mf.js')}"></script>
</acre:block>
